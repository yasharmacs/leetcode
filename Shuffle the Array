class Solution {
    public int[] shuffle(int[] nums, int n) {
        int len=2*n;
        int start=0;
        int mid=n;
        int[] arr =new int[nums.length];   //codeby YASH SHARMA
        
         for(int i=0;i<nums.length;i+=2)
         {
             arr[i]=nums[start];
             arr[i+1]=nums[mid];
             start++;
             mid++;
         }
        
        return arr;
    }
}
